<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/coffeehouse"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6B958F8F">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="320dp"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/leckerli_one"
            android:gravity="center"
            android:text="cafe house"
            android:textColor="#F1F4F4"
            android:textSize="60sp" />

        <Login
            android:id="@+id/LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gradient"
            android:text="Button"
            android:textColor="#0C0101"
            android:textColorHighlight="#00AE1D1D"
            android:textColorHint="#070101"
            android:textSize="18sp" />

        <register
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#100303"
            android:textColorHighlight="#00AE1D1D"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>